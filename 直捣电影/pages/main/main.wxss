/* pages/main/main.wxss */
.content{
    background: #3a3a3a;
    min-height: 100%;
    min-width: 100%;
}
.swiper{
    border: darkslategrey solid 1px;
}
.separator{
    width: 100%;
    height: 5px;
    margin-bottom: 1px;
    background-color: black;
    opacity: 0.3;
}

.movie-info{
    display: flex;
    flex-direction: row;
    padding: 5px;
}

.movie-image{
    border: gray solid 1px;
}

.movie-image image{
    width: 80px;
    height: 120px;
}

.movie-base{
    padding: 10px 0px 10px 10px;
    color: #ffffff;
    font-size: 11px;
    height: 20px;
    line-height: 20px;

}

.hr{
    height: 2px;
    width: 100%;
    border-top: white solide 1px;
    border-bottom: white solide 1px;
    background-color: black;
    opacity: 0.2;
}

